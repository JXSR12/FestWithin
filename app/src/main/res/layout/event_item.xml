<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardshape"
    android:backgroundTint="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/event_Date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="05 Jan 2023"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/event_Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Fishing Festival 2023"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/event_combinedSlots"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="236 tickets left"
            android:textStyle="bold"
            android:textSize="11sp"
            android:gravity="center"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/event_viewDetailsBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@color/black_b3"
            android:backgroundTint="@color/logo_red"
            android:layout_weight="1.5"
            android:text="0.2 km\nfrom you"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:clickable="false"
            android:padding="2dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>