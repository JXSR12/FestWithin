<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketDetailActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <ImageView
        android:id="@+id/td_qrCode"
        android:layout_width="wrap_content"
        android:layout_height="206dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/td_qrCode"
        android:orientation="vertical"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Ticket Details"
          android:background="@drawable/cardshape"
          android:backgroundTint="@color/black_b3"
          android:textColor="@color/white"
          android:textAlignment="center"
          android:gravity="center"
          android:textStyle="bold"
          android:textSize="27sp"
          android:layout_marginTop="30dp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Event Title"
          android:textStyle="italic"
          android:gravity="center"
          android:textSize="12sp"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="10dp" />
      <TextView
          android:id="@+id/td_eventtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Fishing Festival 2023"
          android:textStyle="bold"
          android:gravity="center"
          android:textSize="14sp"
          android:layout_marginLeft="0dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Ticket Classname"
          android:textStyle="italic"
          android:gravity="center"
          android:textSize="12sp"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="10dp" />
      <TextView
          android:id="@+id/td_classname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="FisherPro+"
          android:textStyle="bold"
          android:gravity="center"
          android:textSize="14sp"
          android:layout_marginLeft="0dp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Ticket Identifier"
          android:gravity="center"
          android:textStyle="bold"
          android:background="@color/logo_red_66"
          android:textSize="12sp"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="10dp" />
      <TextView
          android:id="@+id/td_identifier"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="060af7e0e4bf"
          android:textStyle="bold"
          android:gravity="center"
          android:textSize="18sp"
          android:background="@color/logo_red"
          android:textColor="@color/white"
          android:padding="5dp"
          android:layout_marginLeft="0dp" />



      <Button
          android:id="@+id/invalidateBtn"
          android:layout_marginTop="150dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="26sp"
          android:padding="20dp"
          android:text="Invalidate"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="*Do not press 'INVALIDATE' unless you are a physical counter staff,
          most events will automatically invalidate your ticket upon entry."
          android:textStyle="italic"
          android:gravity="left"
          android:textSize="13sp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp" />


    </LinearLayout>



  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
