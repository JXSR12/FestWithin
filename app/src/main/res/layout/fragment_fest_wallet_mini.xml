<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FestWalletMiniFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_fwallet_logoonly" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/miniUpperLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/your_wallet_balance"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:paddingBottom="3dp"
                android:background="@color/logo_red"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/miniCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="IDR"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/miniBalance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="165000.00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    />

            </LinearLayout>
            <Button
                android:id="@+id/goToWalletBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black_b3"
                android:layout_weight="1"
                android:text="Go to My Wallet"
                />
        </LinearLayout>
    </LinearLayout>






</FrameLayout>